@page "/"
@layout StudentLayout

<PageTitle>Trang chủ</PageTitle>
<div class="container-fluid p-0">
    <div class="row vh-75">
        <div class="col-12 p-0">
            <img src="image/BannerHome.png" alt="Banner Home" class="w-100 border" />
        </div>
    </div>
    <div class="container mt-4 ">
        <div class="d-flex justify-content-between text-center">
            <div class="d-flex flex-column align-items-center">
                <i class="bi bi-bank  fs-1"></i>
                <h5 class="title">Trường học thông minh</h5>
                <a href="#" class="subtitle"></a>
            </div>
            <div class="d-flex flex-column align-items-center">
                <i class="bi bi-mortarboard  fs-1"></i>
                <h5 class="title">Đổi mới thi cử</h5>
                <a href="#" class="subtitle"></a>
            </div>
            <div class="d-flex flex-column align-items-center">
                <i class="bi bi-trophy fs-1"></i>
                <h5 class="title">Kết quả chính xác</h5>
                <a href="#" class="subtitle"></a>
            </div>
            <div class="d-flex flex-column align-items-center">
                <i class="bi bi-diagram-3 fs-1"></i>
                <h5 class="title">Kết nối tri thức</h5>
                <a href="#" class="subtitle"></a>
            </div>
        </div>
    </div>
    @{
        string[] colors = { "#FFEBEE", "#E3F2FD", "#E8F5E9", "#FFF3E0", "#F3E5F5" }; 
        int index = 0; 
    }
    <div class="container mt-4 py-5">
        <h4 class="text-white text-center mb-3 p-3 rounded shadow" style="background: linear-gradient(to right, #4facfe, #00f2fe);">
            📅 Danh sách bài thi sắp tới
        </h4>
        <div class="p-3 ">
            <ul class="list-group">
                @foreach (var exam in upcomingExams)
                {
                    <li class="list-group-item d-flex shadow justify-content-between align-items-center border-0 shadow-sm mb-2 rounded"
                        style="background-color: @(colors[index % colors.Length]);">
                        <div>
                            <h5 class="mb-1 text-primary fw-bold">@exam.Title</h5>
                            <p class="mb-1 text-secondary"><i class="bi bi-calendar-event text-danger"></i> Ngày thi: <span class="fw-semibold text-dark">@exam.Date.ToString("dd/MM/yyyy HH:mm")</span></p>
                            <p class="mb-1 text-secondary"><i class="bi bi-clock text-warning"></i> Thời gian: <span class="fw-semibold text-dark">@exam.Duration</span></p>
                        </div>
                        <button class="btn btn-outline-primary rounded-pill px-4">Xem chi tiết</button>
                    </li>
                    index++; 
                }
            </ul>
        </div>
    </div>



</div>
