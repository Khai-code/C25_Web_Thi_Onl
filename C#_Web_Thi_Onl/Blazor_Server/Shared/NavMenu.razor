<nav class="navbar navbar-expand-md navbar-light bg-transparent fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand d-none d-md-flex align-items-center" href="/">
            <img src="image/LogoHome.png" alt="Logo" class="me-2 logo" width="60" height="60" />
            <span class="fw-bold navbar-brand text-uppercase"
                  style="font-family: 'Poppins', sans-serif;
                     font-size: 1.5rem;
                     font-weight: 600;
                     letter-spacing: 1px;
                     transition: color 0.3s ease-in-out;
               color: #007bff;">Smart School
            </span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link nav-text" href="/">
                        <i class="bi bi-house-door me-2 nav-icon"></i> Trang chủ
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-text" href="/bangdiem">
                        <i class="bi bi-journal-text me-2 nav-icon"></i> Bảng điểm
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-text" href="/vaothi">
                        <i class="bi bi-pencil-square me-2 nav-icon"></i> Vào thi
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-text" href="/lienhe">
                        <i class="bi bi-envelope me-2 nav-icon"></i> Liên hệ
                    </a>
                </li>
            </ul>
        </div>
        <div class="d-flex align-items-center">
            @if (isLoggedIn)
            {
                <span class="nav-text me-3">Xin chào, @username</span>
                <button class="btn btn-outline-primary" @onclick="Logout">Đăng xuất</button>
            }
            else
            {
                <a class="btn btn-primary" href="/login">Đăng nhập</a>
            }
        </div>
    </div>
</nav>
@code {
    private bool isLoggedIn = false;
    private string username = "Người dùng";

    protected override void OnInitialized()
    {
       
        isLoggedIn = true;
    }

    private void Logout()
    {
        isLoggedIn = false;
        username = "";
    }
}
